<h2>Sign up</h2>

<%
  # customized code begin

  params[:user][:user_type] ||= 'sme'

  if ["sme", "provider"].include? params[:user][:user_type].downcase
    child_class_name = params[:user][:user_type].downcase.camelize
    user_type = params[:user][:user_type].downcase
  else
    child_class_name = "Sme"
    user_type = "sme"
  end

  resource.rolable = child_class_name.constantize.new if resource.rolable.nil?

  # customized code end
%>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= my_devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :required => 'required' %></div>

  <div><%= f.label :address, "Contact Address" %><br />
  <%= f.text_field :address, :required => 'required' %></div>

  <div><%= f.label :contact_number, "Contact Number" %><br />
  <%= f.text_field :contact_number, :required => 'required' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :required => 'required' %></div>

  <div><%= f.label :password_confirmation, "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %></div>

  <% # customized code begin %>
  <%= fields_for resource.rolable do |rf| %>
    <% render :partial => "#{child_class_name.underscore}_fields", :locals => { :f => f } %>
  <% end %>

  <%= hidden_field :user, :user_type, :value => user_type %>
  <% # customized code end %>

  <div><%= f.submit "Sign up" %></div>
<% end %>